{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
