{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
